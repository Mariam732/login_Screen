<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondActivity">

<View
    android:id="@+id/view_1"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#DD5DA4"
    />
    <View
        android:id="@+id/view_2"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        app:layout_constraintStart_toStartOf="@id/view_1"
        android:background="@drawable/ic_wave"
        />
    <TextView
        android:id="@+id/sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Sign Up"
        android:textSize="40sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
               />
    <TextView
        android:id="@+id/full_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name_et"
        app:layout_constraintTop_toBottomOf="@id/view_2"
        app:layout_constraintEnd_toEndOf="@id/name_et"
        android:text="Full name"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/name_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:hint="Name"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/rounds"
        android:padding="7dp"

        />
    <TextView
        android:id="@+id/email_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_et"
        app:layout_constraintStart_toStartOf="@id/name_et"
        app:layout_constraintEnd_toEndOf="@id/name_et"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_tv"
        app:layout_constraintStart_toStartOf="@id/email_tv"
        app:layout_constraintEnd_toEndOf="@id/email_tv"
        android:hint="Email"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/rounds"
        android:padding="7dp"
        />
    <TextView
        android:id="@+id/username_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_et"
        app:layout_constraintStart_toStartOf="@id/name_et"
        app:layout_constraintEnd_toEndOf="@id/name_et"
        android:layout_marginTop="20dp"
        android:text="Username"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/username_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/username_tv"
        app:layout_constraintStart_toStartOf="@id/username_tv"
        app:layout_constraintEnd_toEndOf="@id/username_tv"
        android:hint="Username"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/rounds"
        android:padding="7dp"
        />
    <TextView
        android:id="@+id/password_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/username_et"
        app:layout_constraintStart_toStartOf="@id/username_et"
        app:layout_constraintEnd_toEndOf="@id/username_et"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_tv"
        app:layout_constraintStart_toStartOf="@id/password_tv"
        app:layout_constraintEnd_toEndOf="@id/password_tv"
        android:hint="Password"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/rounds"
        android:padding="7dp"
        />
    <TextView
        android:id="@+id/repeat_password_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_et"
        app:layout_constraintStart_toStartOf="@id/password_et"
        app:layout_constraintEnd_toEndOf="@id/password_et"
        android:layout_marginTop="20dp"
        android:text="Repeat Password"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/repeat_password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/repeat_password_tv"
        app:layout_constraintStart_toStartOf="@id/repeat_password_tv"
        app:layout_constraintEnd_toEndOf="@id/repeat_password_tv"
        android:hint=""
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/rounds"
        android:padding="7dp"
        />
<Button
    android:id="@+id/login_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/password_tv"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="30dp"
    android:layout_marginStart="20dp"
    android:text="Sign Up"
    android:textAllCaps="false"
    android:textSize="20dp"
    android:background="@drawable/rounds"
    />
  <Button
      android:id="@+id/sign_in_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/login_btn"
      app:layout_constraintEnd_toEndOf="@id/repeat_password_tv"
      android:text="Sign In"
      android:textAllCaps="false"
      android:textSize="20dp"
      android:background="@drawable/rounds"
      />

</androidx.constraintlayout.widget.ConstraintLayout>